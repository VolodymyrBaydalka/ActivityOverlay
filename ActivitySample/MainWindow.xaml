<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivitySample"
        xmlns:a="clr-namespace:ActivityOverlay;assembly=ActivityOverlay" 
        x:Class="ActivitySample.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <a:ActivityControl x:Name="Activity" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <UniformGrid Columns="2">
                <Button Margin="80" Click="Button_Click1">Error</Button>
                <Button Margin="80" Click="Button_Click2">Success</Button>
            </UniformGrid>
        </a:ActivityControl>
    </Grid>
</Window>
